{
  "manifest_version": 3,
  "name": "Spooky Countdown Timer",
  "version": "1.0.0",
  "description": "A Halloween-themed countdown timer extension. Track the time remaining until your spooky events with customizable themes and dynamic status messages.",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png",
    "512": "icons/icon-512.png"
  },
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "permissions": ["storage"],
  "host_permissions": [],
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  }
}
