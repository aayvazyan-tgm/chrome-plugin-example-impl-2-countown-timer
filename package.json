{
  "name": "chrome-extension-skeleton",
  "version": "1.0.0",
  "description": "Chrome Extension with TypeScript and Webpack",
  "scripts": {
    "build": "webpack --config webpack.prod.js",
    "dev": "webpack --config webpack.dev.js",
    "dev:once": "webpack --config webpack.dev.js --no-watch",
    "start": "npm run dev:once && node scripts/start-browser.js",
    "start:chromium": "npm run dev:once && node scripts/start-chromium.js",
    "clean": "rimraf dist coverage playwright-report test-results",
    "lint": "run-s type-check format:check lint:eslint",
    "lint:eslint": "eslint src/**/*.ts --max-warnings=0",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "check": "run-s lint test",
    "prepare": "husky",
    "pre-commit": "lint-staged"
  },
  "keywords": [
    "chrome-extension",
    "typescript",
    "webpack"
  ],
  "author": "",
  "license": "Apache-2.0",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/chrome": "^0.1.31",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.46.4",
    "canvas": "^3.2.0",
    "copy-webpack-plugin": "^13.0.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "fast-check": "^4.3.0",
    "html-webpack-plugin": "^5.6.5",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.7",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.56.1",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.2",
    "ts-jest": "^29.4.5",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1",
    "webpack-merge": "^6.0.1"
  }
}
